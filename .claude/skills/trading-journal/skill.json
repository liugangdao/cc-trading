{
  "name": "trading-journal",
  "version": "1.0.0",
  "description": "交易日志管理系统 - 记录和分析交易操作",
  "commands": {
    "trade-open": {
      "description": "记录新的开仓操作",
      "command": "./trading-cli open",
      "interactive": true
    },
    "trade-close": {
      "description": "记录平仓操作",
      "command": "./trading-cli close",
      "interactive": true
    },
    "trade-list": {
      "description": "查询交易记录",
      "command": "./trading-cli list",
      "args": {
        "--status": {
          "description": "筛选状态 (open, closed, all)",
          "default": "all"
        },
        "--symbol": {
          "description": "筛选交易品种"
        },
        "--market": {
          "description": "筛选市场类型"
        },
        "--from": {
          "description": "起始日期 (YYYY-MM-DD)"
        },
        "--to": {
          "description": "结束日期 (YYYY-MM-DD)"
        },
        "--format": {
          "description": "输出格式 (table, json)",
          "default": "table"
        }
      }
    },
    "trade-risk": {
      "description": "分析当前持仓风险",
      "prompt": "请分析 trading-data/ 目录中的交易数据，评估当前未平仓位的风险状况。包括：1) 总保证金和最大可能损失 2) 每个仓位的风险回报比 3) 仓位集中度 4) 风险预警。"
    },
    "trade-performance": {
      "description": "分析交易表现",
      "prompt": "请分析 trading-data/ 目录中的历史交易数据，提供优化建议。包括：1) 整体表现（胜率、盈亏比）2) 品种和市场表现 3) 止损止盈分析 4) 持仓时长分析 5) 具体优化建议。"
    }
  }
}
